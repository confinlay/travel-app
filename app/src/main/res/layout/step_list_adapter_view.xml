<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/textView_step_adapter_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0."
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/textView_step_adapter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="default title"
            android:textSize="25sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_location_on_16"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/textView_step_adapter_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="default location, location"
                android:textColor="@color/red_location"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_credit_card_24"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/textView_step_adapter_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 â‚¬"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/design_default_color_primary"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>