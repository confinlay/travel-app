<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItineraryActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/p1toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#C82626"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow_add_itinerary_activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_ios_40"
            android:paddingStart="20dp"
            />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add itinerary"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title :"
            android:textSize="25sp"
            android:textColor="@color/black"
            />


        <EditText
            android:id="@+id/editText_add_itinerary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Itinerary title..."
            android:textSize="25sp"
            android:textColorHint="@color/hint_grey"
            android:layout_marginLeft="10dp"
            android:inputType="text"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button_add_itinerary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add itinerary"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:padding="10dp"
        />

</LinearLayout>